 @model Movie
<h2>Movie Information Form</h2>
<form method="post">
    <input type="hidden" asp-for="MovieId" required /><br><br>
    <label asp-for="Category">Category:</label><br>
    <select asp-for="CategoryId" required>
        <option value="">Select a Category</option>
        @foreach (Category c in ViewBag.Categories)
        {
            <option value="@c.CategoryId">@c.CategoryName</option>
        }
    </select><br><br>
    <label asp-for="Title">Title:</label><br>
    <input asp-for="Title" required /><br><br>
    <label asp-for="Year">Year:</label><br>
    <input asp-for="Year" required /><br><br>
    <label asp-for="Director">Director:</label><br>
    <input asp-for="Director" required /><br><br>
    <label asp-for="Rating">Rating:</label><br>
    <select asp-for="Rating" required>
        <option>Select</option>
        <option value="G">G</option>
        <option value="PG">PG</option>
        <option value="PG-13">PG-13</option>
        <option value="R">R</option>
    </select><br><br>
    <label asp-for="Edited">Edited:</label><br>
    <select asp-for="Edited">
        <option>Select</option>
        <option value="true">Yes</option>
        <option value="false">No</option>
    </select><br><br>
    <label asp-for="LentTo">Lent To:</label><br>
    <input asp-for="LentTo" /><br><br>
    <label asp-for="CopiedToPlex">Copied To Plex:</label><br>
    <select asp-for="CopiedToPlex">
        <option>Select</option>
        <option value="true">Yes</option>
        <option value="false">No</option>
    </select><br><br>
    <label asp-for="Notes">Notes (Max 25 characters):</label><br>
    <input asp-for="Notes" maxlength="25" /><br><br>
    <input type="submit" value="Submit">
</form>

